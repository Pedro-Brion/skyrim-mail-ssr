{
  "name": "skyrim-mail-client",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "tsx ./server/index --watch",
    "build": "pnpm build:client && pnpm build:server && pnpm build:express",
    "build:client": "vue-tsc --noEmit && vite build --outDir dist/client",
    "build:server": "vue-tsc --noEmit && vite build --ssr src/entry-server.ts --outDir dist/server",
    "build:express": "tsc -p tsconfig.node.json",
    "preview": "cross-env NODE_ENV=production node dist/server"
  },
  "dependencies": {
    "@tailwindcss/vite": "^4.1.11",
    "axios": "^1.10.0",
    "compression": "^1.8.0",
    "dotenv": "^17.2.0",
    "express": "^5.1.0",
    "pinia": "^3.0.3",
    "sirv": "^3.0.1",
    "tailwindcss": "^4.1.11",
    "ts-node": "^10.9.2",
    "tsx": "^4.20.3",
    "vue": "^3.5.17",
    "vue-router": "4"
  },
  "devDependencies": {
    "@types/compression": "^1.8.1",
    "@types/express": "^5.0.3",
    "@types/node": "^24.0.10",
    "@vitejs/plugin-vue": "^6.0.0",
    "@vue/tsconfig": "^0.7.0",
    "cross-env": "^7.0.3",
    "eslint": "^9.30.1",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-vue": "^10.3.0",
    "globals": "^16.3.0",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.36.0",
    "unplugin-auto-import": "^19.3.0",
    "vite": "^7.0.3",
    "vue-tsc": "^2.2.12"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "@tailwindcss/oxide",
      "esbuild"
    ]
  }
}
